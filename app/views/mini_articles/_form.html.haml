= form_for(@mini_article) do |f|
  - if @mini_article.errors.any?
    #error_explanation
      %h2
        = pluralize(@mini_article.errors.count, "error")
        prohibited this mini_article from being saved:
      %ul
        - @mini_article.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :name
    %br/
    = f.text_field :name
  .actions
    = f.submit
