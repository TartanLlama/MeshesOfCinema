  <tr>
    <th>Title</th>
    <th>Content</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @mini_reviews.each do |mini_review| %>
  <tr>
    <td><%= mini_review.content %></td>
    <td><%= link_to 'Show', mini_review %></td>
    <td><%= link_to 'Edit', edit_mini_review_path(mini_review) %></td>
