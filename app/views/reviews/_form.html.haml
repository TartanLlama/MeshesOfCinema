= form_for(@review) do |f|
  - if @review.errors.any?
    #error_explanation
      %h2
        = pluralize(@review.errors.count, "error")
        prohibited this review from being saved:
      %ul
        - @review.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :rating
    %br/
    = f.text_field :rating
  .field
    = f.label :content
    %br/
    = f.text_field :content
  .actions
    = f.submit
